      name="nom"
      required="true"
      primaryKey="true"
      type="VARCHAR"
      size="128"
      description="Nom du troll"/>
    <column
      name="attaque"
      required="false"
      type="INTEGER"
      description="Points d'attaque"/>
    <column
      name="degats"
      required="false"
      type="INTEGER"
      description="Points de degat"/>
      
    <column
      name="vie"
      required="false"
      type="INTEGER"
      description="Points de vie"/>
      
    <column
      name="esquive"
      required="false"
      type="INTEGER"
      description="Points d'esquive"/>
      
    <column
      name="pa"
      required="false"
      type="INTEGER"
      description="Points d'action"/>
      
    <column
 		name="x"
 		required="true"
 		type="INTEGER"
 		description="absisse_case"/>
 				
 	<column
 		name="y"
 		required="true"
 		type="INTEGER"
 		description="ordonne_case"/>	
      
  </table>



 <table name="cell" description="Cell_s_" idMethod="none">
 	<column
 		name="x"
 		required="true"
 		primaryKey="true"
 		type="INTEGER"
 		description="absisse_case"/>		
 	<column
 		name="y"
 		required="true"
 		primaryKey="true"
 		type="INTEGER"
 		description="ordonne_case"/>	
